services:

  db:
    image: postgres:15-alpine
    container_name: wikijs-postgres
    environment:
      POSTGRES_DB: wiki
      POSTGRES_PASSWORD: W1k1jsR0cks
      POSTGRES_USER: wikijs
    logging:
      driver: "none"
    restart: unless-stopped
    volumes:
      - wikijs-db-data:/var/lib/postgresql/data
    networks:
      - {{ docker_network }}

  wikijs:
    image: ghcr.io/requarks/wiki:2
    container_name: wikijs
    depends_on:
      - db
    environment:
      DB_TYPE: postgres
      DB_HOST: db
      DB_PORT: 5432
      DB_USER: wikijs
      DB_PASS: W1k1jsR0cks
      DB_NAME: wiki
    restart: unless-stopped
    ports:
      - "3000:3000"
    volumes:
      - "{{ wikijs_ssh_dir }}:/wiki/ssh:ro"
    networks:
      - {{ docker_network }}

networks:
  {{ docker_network }}:
    external: true

volumes:
  wikijs-db-data: