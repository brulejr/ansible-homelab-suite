services:
  traefik:
    image: "{{ traefik_image }}"
    container_name: traefik
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true

    ports:
      - "80:80"
      - "443:443"
      # - "{{ traefik_bind_ip }}:80:80"
      # - "{{ traefik_bind_ip }}:443:443"

    networks:
      - "{{ docker_network }}"

    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - "{{ traefik_data_dir }}/acme.json:/acme.json"
      - "{{ traefik_data_dir }}/traefik.yml:/traefik.yml:ro"
      - "{{ traefik_dynamic_dir }}:{{ traefik_dynamic_mount }}:ro"

    environment:
      CF_DNS_API_TOKEN: "{{ vault_cloudflare_dns_token }}"

    labels:
      traefik.enable: "true"

      traefik.http.routers.traefik.entrypoints: "http"
      traefik.http.routers.traefik.rule: "Host(`{{ traefik_dashboard_host | default('traefik.' ~ domain_name) }}`)"

      traefik.http.middlewares.traefik-auth.basicauth.users: "{{ traefik_basic_auth_hash }}"
      traefik.http.middlewares.traefik-https-redirect.redirectscheme.scheme: "https"
      traefik.http.middlewares.sslheader.headers.customrequestheaders.X-Forwarded-Proto: "https"

      traefik.http.routers.traefik.middlewares: "traefik-https-redirect"

      traefik.http.routers.traefik-secure.entrypoints: "https"
      traefik.http.routers.traefik-secure.rule: "Host(`{{ traefik_dashboard_host | default('traefik.' ~ domain_name) }}`)"
      traefik.http.routers.traefik-secure.middlewares: "traefik-auth"
      traefik.http.routers.traefik-secure.tls: "true"
      traefik.http.routers.traefik-secure.tls.certresolver: "cloudflare"
{% set tls_domains = traefik_tls_domains | default([{'main': domain_name, 'sans': ['*.' ~ domain_name]}]) %}
{% for d in tls_domains %}
      traefik.http.routers.traefik-secure.tls.domains[{{ loop.index0 }}].main: "{{ d.main }}"
{% if d.sans is defined and d.sans %}
      traefik.http.routers.traefik-secure.tls.domains[{{ loop.index0 }}].sans: "{{ d.sans | join(',') }}"
{% endif %}
{% endfor %}
      traefik.http.routers.traefik-secure.service: "api@internal"

networks:
  {{ docker_network }}:
    external: true
