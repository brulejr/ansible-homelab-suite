api:
  debug: true
  dashboard: true

entryPoints:
  http:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: "https"
          scheme: "https"
  https:
    address: ":443"
  mqtt:
    address: ":1883"
  websocket:
    address: ":9001"

serversTransport:
  insecureSkipVerify: true

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
  file:
    directory: "{{ traefik_dynamic_mount }}"
    watch: true

certificatesResolvers:
  cloudflare:
    acme:
      email: "{{ vault_cloudflare_email }}"
      storage: "acme.json"
      caServer: "{{ traefik_acme_ca_server }}"
      dnsChallenge:
        provider: "cloudflare"
        resolvers:
          - "1.1.1.1:53"
          - "1.0.0.1:53"
